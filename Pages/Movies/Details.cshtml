@page
@using Microsoft.EntityFrameworkCore.Migrations
@model CineMania.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="row">
        <div class="col-md-3">
            <img class="img-fluid" src="/images/posters/@Model.Movie.ImageName" alt="">
        </div>
        <div class="col-md-6">
            <h5>Synopsis</h5>
            <p>@Model.Movie.Description</p>
        </div>
        <div class="col-md-3">
            <h5>Related Movies</h5>
            

                @{
                foreach (var unique in Model.Related)
                {
                  
                    <h5 class="card-title"> @unique.Title </h5>
                        <a class="text-decoration-none" asp-page="./Details" asp-route-id="@unique.Id"><img src="/images/posters/@unique.ImageName" alt="cover" width="50%"></a>  
                    
                    
                    
                        
                       

                }
            }

        </div>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
